{
"permissions": [
    "storage",
    "*://*/*"
],
"background": {
    "scripts": ["background.js"],
    "persistent": false
},
"content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["onload.js"]
    // default is document_idle
    // "run_at": "document_end"
}],
"browser_action": {
  "default_icon": "fold.png"
},
"commands": {
  "_execute_browser_action": {
    "suggested_key": {
      "default": "Ctrl+Shift+E",
      "mac": "Ctrl+Shift+E"
    }
  }
},
"author": "Sinan Midillili",
"name":"Flip Estate",
"description":"Hide the sidebars on Reddit, Wikipedia, Facebook to save screen-estate. Toggle by clicking on Icon or Command/Ctrl+Shift+E",
"version":"0.0.3.0",
"manifest_version":2,
"icons": {
  "16": "fold.png",
  "48": "fold.png",
  "128": "fold.png"
  }
}
